<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Glamboyant</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css2?family=Megrim&display=swap" rel="stylesheet">

</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color: white !important; color: hotpink !important;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")"><img src="~/Assets/GlamboyantLogo.png" class="logo" style="height:80px; width:150px;" /></a>
               @* @Html.ActionLink("Glamboyant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @style = "color:hotpink;" })</li>
                    <li>@Html.ActionLink("Services", "Index", "HairService", null, new { @style = "color:hotpink;" })</li>
                    <li>@Html.ActionLink("Book Now", "Index", "Appointment", null, new { @style = "color:hotpink;" })</li>
                    <li>@Html.ActionLink("Reviews", "Index", "Review", null, new { @style = "color:hotpink;" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @style = "color:hotpink;" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "color:hotpink;" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Glamboyant</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
